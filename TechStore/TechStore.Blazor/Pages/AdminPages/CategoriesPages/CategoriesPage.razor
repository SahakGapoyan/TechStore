@page "/CategoriesPage"
@using TechStore.Blazor.DtoModels.Category
@using TechStore.Blazor.Interfaces
<h3>CategoriesPage</h3>
@inject ICategoryApi CategoryApi
@inject IDialogService DialogService

    <div class="mt-5">
        <MudButton Variant="Variant.Filled"
                   Color="Color.Success"
                   OnClick="NavigateToCreatePage"
                   StartIcon="@Icons.Material.Filled.Add">
            Ստեղծել նոր կատեգորիա
        </MudButton>
    </div>
@if (isLoading)
{
    <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
}
else if (Categories.Count == 0)
{
    <p>Կատեգորիաներ չկան</p>
}
else
{
    <MudDataGrid Items="@Categories" Filterable="false" SortMode="@SortMode.None" Groupable="false">
        <Columns>
            <PropertyColumn Property="x => x.Id" />
            <PropertyColumn Property="x => x.Name" />
            <PropertyColumn Property="x => x.CreatedAt" />
            <PropertyColumn Property="x => x.Description" />
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>
                        <MudButton OnClick="@(() => OpenEditPage(context.Item))"
                                   Size="@Size.Small"
                                   Variant="@Variant.Filled"
                                   Color="@Color.Primary">
                            Փոփոխել
                        </MudButton>
                        <MudButton OnClick="@(() => ShowDeleteConfirmation(context.Item.Id))"
                                   Size="@Size.Small"
                                   Variant="@Variant.Filled"
                                   Color="@Color.Error">
                            Ջնջել
                        </MudButton>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
}
@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;
    private bool isLoading = true;
    public List<CategoryDto> Categories { get; set; } = new List<CategoryDto>();
    override protected async Task OnInitializedAsync()
    {
        Categories = (await CategoryApi.GetCategories()).ToList();
        isLoading = false;
    }

    private void OpenEditPage(CategoryDto categoryDto)
    {
        if (categoryDto == null)
        {
            return;
        }
        Nav.NavigateTo($"/CategoriesPage/CategoryEditPage/{categoryDto.Id}");
    }

    private async Task ShowDeleteConfirmation(int id)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Հաստատում",
            "Դուք համոզված եք, որ ցանկանում եք ջնջել այս կատեգորիան?",
            yesText: "Ջնջել",
            cancelText: "Չեղարկել");

        if (result == true)
        {
            await DeleteAsync(id);
        }
    }
    private async Task DeleteAsync(int id)
    {
        await CategoryApi.DeleteCategory(id);
        Categories = (await CategoryApi.GetCategories()).ToList();
    }


    private void NavigateToCreatePage()
    {
        Nav.NavigateTo("/CategoriesPage/CategoryCreatePage");
    }
}

